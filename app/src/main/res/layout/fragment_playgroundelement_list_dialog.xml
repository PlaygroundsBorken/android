<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
            android:text="@string/playground_elements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:padding="8dp"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textColor="@android:color/white" android:textStyle="bold" android:textSize="24sp"
            android:paddingTop="16dp" android:paddingBottom="16dp"/>
    <android.support.v7.widget.RecyclerView android:id="@+id/list"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:clipToPadding="false"
    />
</LinearLayout>