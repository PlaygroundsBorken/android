<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_margin="0dp"
                 android:padding="0dp"
                 android:id="@+id/container">
        <LinearLayout
                android:id="@+id/list_item_container"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">

            <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:fillViewport="true">
                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                              android:orientation="vertical">
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        <com.glide.slider.library.SliderLayout
                                android:id="@+id/playground_images_slider"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                app:layout_constraintDimensionRatio="H,16:9"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                        </com.glide.slider.library.SliderLayout>
                        <LinearLayout android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:background="#fff"
                                      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                                      app:layout_constraintRight_toRightOf="parent">
                            <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" android:id="@+id/playground_rating"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:numStars="5" android:rating="3" android:stepSize="1"
                                    android:isIndicator="true"
                                    android:layout_margin="8dp"/>
                        </LinearLayout>

                    </android.support.constraint.ConstraintLayout>
                    <TextView
                            android:id="@+id/playground_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/list_item_spacing_half"
                            android:paddingLeft="@dimen/list_item_spacing"
                            android:paddingRight="@dimen/list_item_spacing"
                            android:paddingTop="@dimen/list_item_spacing_half"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"
                            android:background="?attr/selectableItemBackground"
                            tools:text="Hello" android:fontFamily="@font/kidsn"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/playground_description"
                            android:paddingLeft="@dimen/list_item_spacing"
                            android:paddingBottom="@dimen/list_item_spacing_half"
                            android:paddingTop="@dimen/list_item_spacing_half"
                            android:paddingRight="@dimen/list_item_spacing" android:fontFamily="casual"
                            android:lineSpacingExtra="8sp" android:textSize="18sp" android:text="Test"
                            android:typeface="normal"/>

                    <de.borken.playgrounds.borkenplaygrounds.views.PlaygroundElementListViewSquare
                            android:id="@+id/playground_elements" android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:elementsAreSelectable="false"
                            app:overFlowHorizontal="true"/>
                    <LinearLayout
                            style="?android:attr/buttonBarStyle"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="100dp" android:id="@+id/playground_button_container"
                            android:visibility="gone">

                        <ImageButton
                                style="?android:attr/buttonBarButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" android:id="@+id/upvote"
                                android:layout_weight="1" android:fontFamily="@font/kidsn"
                                android:contentDescription="" android:src="@drawable/ic_happy"
                                android:scaleType="center" android:padding="8dp"/>
                        <ImageButton
                                style="?android:attr/buttonBarButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" android:id="@+id/downvote"
                                android:layout_weight="1" android:fontFamily="@font/kidsn"
                                android:contentDescription="" android:src="@drawable/ic_sad"
                                tools:src="@drawable/ic_sad" android:scaleType="center" android:padding="8dp"/>
                        <Button
                                android:drawableRight="@drawable/ic_baseline_chat_24px"
                                android:text="@string/playground_button_remark"
                                style="?android:attr/buttonBarButtonStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp" android:id="@+id/playground_remarks"
                                android:layout_weight="1" android:drawableEnd="@drawable/ic_baseline_chat_24px"
                                android:fontFamily="@font/kidsn"/>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>
        <com.github.chrisbanes.photoview.PhotoView
                android:id="@+id/expanded_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>